{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es2016",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@steering/*": ["steering/*"],
      "@draw/*": ["draw/*"],
      "@lib/*": ["lib/*"]
    },
    "noImplicitAny": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
